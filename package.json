{
  "name": "mediahost",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "dev": "run-p dev:copy dev:ts dev:electron",
    "dev:ts": "tsc -w --pretty false",
    "dev:copy": "cpy \"src/renderer/**/*\" dist/renderer --watch --flat",
    "dev:electron": "wait-on dist/main.js && cross-env NODE_ENV=development electron .",
    "build": "tsc && cpy \"src/renderer/**/*\" dist/renderer && electron-builder",
    "start": "cross-env NODE_ENV=production electron ."
  },
  "build": {
    "appId": "com.your.nowplayinghost",
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "AudioVideo",
      "maintainer": "you@example.com"
    },
    "files": [
      "dist/**/*",
      "static/**/*",
      "package.json"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bonjour-service": "^1.3.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dbus-next": "^0.10.2",
    "electron": "32.3.3",
    "electron-builder": "^26.0.12",
    "express": "^5.1.0",
    "node-fetch": "^2.7.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.8.0",
    "@types/node-fetch": "^2.6.13",
    "@types/ws": "^8.18.1",
    "cpy-cli": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.1"
  }
}
